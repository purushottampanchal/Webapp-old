<div class="cover">

    <div class="overlauy">

        <div class="wrapper">
            <h1 class="text-center login-headaing">Register</h1>

            <hr />
            <div class="row">
                <div class="col-12">
                    <form asp-action="RegisterUser">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            @*<input asp-for="Name" required class="form-control" />*@
                            <div class="input-field">
                                <span class="material-symbols-outlined">
                                    assignment_ind
                                </span>
                                <input type="text" asp-for="Name" required placeholder="Enter Your Name" class="" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="Email" class="control-label"></label>
                            @*<input asp-for="Email" required class="form-control" />*@
                            <div class="input-field">
                                <span class="material-symbols-outlined">
                                    mail
                                </span>
                                <input type="text" asp-for="Email" required placeholder="Enter Your Email " class="" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="row">

                            <div class="form-group col-6">
                                <label asp-for="UserName" class="control-label"></label>
                                @*<input asp-for="UserName" required class="form-control" />*@

                                <div class="input-field">
                                    <span class="material-symbols-outlined">
                                        person
                                    </span>
                                    <input type="text" asp-for="UserName" required placeholder="Username" class="" />
                                </div>

                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>



                            <div class="form-group col-6">
                                <label class="control-label"></label>
                                @*<label asp-for="PhoneNo" class="control-label"></label>*@
                                @*<input asp-for="PhoneNo" required class="form-control" />*@
                                <div class="input-field">
                                    <span class="material-symbols-outlined">
                                        call
                                    </span>
                                    <input type="text" asp-for="PhoneNo" required placeholder="Contact Number" maxlength="10" class="" />
                                </div>
                                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            @*<input type="password" required asp-for="Password" class="form-control" />*@

                            <div class="input-field">
                                @*<span class="material-symbols-outlined">
                                    password
                                </span>*@
                                <input type="password" asp-for="Password" placeholder="Enter Password" required class="" />
                            </div>

                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfrimPassword" class="control-label"></label>
                            @*<input type="password" asp-for="ConfrimPassword" class="form-control" />*@
                            <div class="input-field">
                               @* <span class="material-symbols-outlined">
                                    password
                                </span>*@
                                <input type="password" asp-for="ConfrimPassword" placeholder="Confirm password" required class="" />
                            </div>
                            <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="UserRole" value="User" />

                        <div class="form-group">
                            <input type="submit" value="Register" class="btn submit-button btn-block text-center my-3" />
                        </div>

                    </form>
                    Already Have account? &nbsp; <a asp-action="Login" asp-controller="Home" class="register-btn text-center bg-transparent text-center">Login</a>
                </div>
            </div>
        </div>


    </div>

</div>
